.footer {
    width: 30%;
    padding: 10px;
    text-align: left;
    font-size: 10px;
    color: rgb(144, 0, 255);
    position:relative; 
    top: 50px;
    clear:both;
}
.footer a {
    color: #666;
    text-decoration: none;
}
.footer a:hover {
    text-decoration: underline;
}

